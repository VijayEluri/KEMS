import Factory.AloFactory;
import Factory.IAloMundo;


public class main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println("Estudo de Padrões de Projeto");
		
		menu();
		int escolha;
		do {
			System.out.print("Escolha uma opção: ");
			escolha = Integer.valueOf(Consolegambijava.leia());
			switch (escolha) {
				case 1:
					estudoFactory();
					break;
				case 2:
					
					break;
				case 5:
					System.out.println("Sair.");
					break;
				default:
					System.err.println("Opção Inválida.");
					break;
			}
		} while (escolha!=5);
		
		
	}
	
	private static void estudoFactory(){
		int opcao = 1;
		AloFactory alo = new AloFactory();
		IAloMundo iAlo;
		switch (opcao) {
			case 1:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.ingles);
				break;
			case 2:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.espanhol);
				break;
			case 3:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.alemao);
				break;
			default:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.ingles);
				System.err.println("Opcao invalida.");
				break;
		}
		iAlo.falaAlo();
	}
	
	
	private static void menu(){
		String m = "";
		m = "1) Para Factory\n";
		m += "2) Para Sigleton\n";
		
		m += "5) para sair";
		System.out.println(m);
	}
	
}


