import Factory.AloFactory;
import Factory.IAloMundo;


public class main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println("Estudo de Padrões de Projeto");
		
		menu();

		estudoFactory();
	}
	
	private static void estudoFactory(){
		int opcao = 1;
		AloFactory alo = new AloFactory();
		IAloMundo iAlo;
		switch (opcao) {
			case 1:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.ingles);
				break;
			case 2:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.espanhol);
				break;
			case 3:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.alemao);
				break;
			default:
				iAlo = alo.CriaAloMundo(AloFactory.idiomas.ingles);
				System.err.println("Opcao invalida.");
				break;
		}
		iAlo.falaAlo();
	}
	
	
	private static void menu(){
		String m = "";
		m = "1) Para Factory\n";
		m += "2) Para Sigleton\n";
		
		m += "5) para sair";
		System.out.println(m);
	}
	
}


