import Factory.AloFactory;
import Factory.IAloMundo;


public class main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println("Estudo de Padrões de Projeto");
		
		menu();

		estudoFactory();
	}
	
	private static void estudoFactory(){
		AloFactory alo = new AloFactory();
		IAloMundo iAlo;
		iAlo = alo.CriaAloMundo(AloFactory.idiomas.ingles);
		iAlo.falaAlo();
	}
	
	
	private static void menu(){
		String m = "";
		m = "1) Para Factory\n";
		m += "2) Para Sigleton\n";
		
		m += "5) para sair";
		System.out.println(m);
	}
	
}


